<metadata xml:lang="en"><Esri><CreaDate>20150413</CreaDate><CreaTime>13185200</CreaTime><ArcGISFormat>1.0</ArcGISFormat><SyncOnce>TRUE</SyncOnce><ModDate>20150413</ModDate><ModTime>18374900</ModTime><scaleRange><minScale>150000000</minScale><maxScale>5000</maxScale></scaleRange><ArcGISProfile>ItemDescription</ArcGISProfile></Esri><tool name="METRIC_run" displayname="METRIC_Run" toolboxalias="DEVELOP_METRIC" xmlns=""><arcToolboxHelpPath>c:\program files (x86)\arcgis\desktop10.2\Help\gp</arcToolboxHelpPath><parameters><param name="l8_meta" displayname="Landsat 8 Metadata filepath" type="Required" direction="Input" datatype="File" expression="l8_meta"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;This is filepath to the landsat 8 metadata (MTL) file with a txt extension. METRIC pulls time, location, and solar values out of the native landsat metadata format so you do not have to enter it manually.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="l8_b2" displayname="Landsat 8 Band 2 filepath (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="l8_b2"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Band 2 raster data from landsat 8 (blue)&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="l8_b3" displayname="Landsat 8 Band 3 filepath (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="l8_b3"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Band 3 raster data from landsat 8 (green)&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="l8_b4" displayname="Landsat 8 Band 4 filepath (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="l8_b4"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Band 4 raster data from landsat 8 (red)&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="l8_b5" displayname="Landsat 8 Band 5 filepath (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="l8_b5"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Band 5 raster data from landsat 8 (near infra-red)&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="l8_b6" displayname="Landsat 8 Band 6 filepath (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="l8_b6"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Band 6 raster data from landsat 8 (short wave infrared 1, 1.57 - 1.65 micrometer )&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="l8_b7" displayname="Landsat 8 Band 7 filepath (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="l8_b7"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Band 7 raster data from landsat 8 (short wave infrared 1, 2.11 - 2.29 micrometer)&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="l8_b10" displayname="Landsat 8 Band 10 filepath (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="l8_b10"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Band 10 raster data from landsat 8 (long wave infrared, 10.60 - 11.19 micrometers)&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="l8_b11" displayname="Landsat 8 Band 11 filepath (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="l8_b11"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Band 11 raster data from landsat 8 (long wave infrared, 11.50 - 12.51 micrometers)&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="DEM" displayname="Digital Elevation Model raster (tif)" type="Required" direction="Input" datatype="Raster Layer" expression="DEM"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;a digital elevation model that covers similar geographic extent as the landsat data&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="hot_pix" displayname="shapefile of hot pixels (non-irrigated)" type="Required" direction="Input" datatype="Shapefile" expression="hot_pix"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;a shapefile drawn around "hot" non-irrigated areas in the area covered by landsat data&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="cold_pix" displayname="shapefile of cold pixels (irrigated)" type="Required" direction="Input" datatype="Shapefile" expression="cold_pix"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;a shapefile drawn around "cold" irrigated areas where evapotranspiration is expected to be high&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="wx_file" displayname="Weather data text file (txt)" type="Required" direction="Input" datatype="File" expression="wx_file"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;the filepath to a file containing weather data at a station very near to, or inside of the area of interest. See help documentation for how to obtain weather data in the proper format.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="crop" displayname="Reference crop type" type="Required" direction="Input" datatype="String" expression="alfalfa | grass"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;This should be "alfalfa", support for "grass" may be added later.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="timezone" displayname="Time zone offset in decimal hours from GMT" type="Required" direction="Input" datatype="Double" expression="timezone"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;the timezone offset from GMT at the time the landsat imagery was taken. May be a floating point value. Keep daylight savings time in mind.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param><param name="workspace" displayname="Workspace to store intermediates and outputs (full path to a NEW directory)" type="Required" direction="Input" datatype="String" expression="workspace"><dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;This must be a desired path to a  NEW folder that metric will create. METRIC writes many files, and requires some empty template files that must be coppied from their templates. All this new data wil be stored in the "workspace" along with all outputs from METRIC.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference></param></parameters></tool><dataIdInfo><idCitation><resTitle>METRIC_Run</resTitle></idCitation><idCredit>NASA DEVELOP</idCredit></dataIdInfo><distInfo><distributor><distorFormat><formatName>ArcToolbox Tool</formatName></distorFormat></distributor></distInfo><mdHrLv><ScopeCd value="005"/></mdHrLv></metadata>
